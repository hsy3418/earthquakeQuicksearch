<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:text="Choose a timeframe"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/timeframeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Timeframe"
        android:prompt="@string/timeframe_prompt" />

    <TextView
        android:layout_width="match_parent"
        android:text="Choose a Magnitude"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/magSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/magnitude"
        android:prompt="@string/magnitude_prompt" />

    <Button
        android:layout_marginTop="500dp"
        android:id="@+id/searchbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />
</LinearLayout>